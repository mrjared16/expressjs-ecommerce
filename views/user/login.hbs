<section class="signin-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <h2 class="text-center">Đăng nhập</h2>
          {{> alert}} 
          <form method='POST' class="text-left clearfix" action="/user/login">
            <div class="form-group">
              <input name='username' type="text" class="form-control" placeholder="Tên đăng nhập">
            </div>
            <div class="form-group">
              <input name='password' type="password" class="form-control" placeholder="Mật khẩu">
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-main text-center">Đăng nhập</button>
            </div>
          </form>
          <p class="mt-20">Chưa có tài khoản ?<a href="/user/register"> <u>Tạo tài khoản mới</u></a></p>
          <p><a href="/user/forgetPassword"> <u>Quên mật khẩu</u></a></p>
        </div>
      </div>
    </div>
  </div>
</section>
